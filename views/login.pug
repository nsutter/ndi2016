extends layout

block content
  .container
    .text-center
      h1#msg_h1 Log in
      br
      form.center-block(role='form', action="/login",method="post", style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name="username", placeholder='Login')
        .form-group
          input.form-control(type='password', name="password", placeholder='Password')
        button.btn.btn-default(type='submit') Log in
        | &nbsp;
        a(href='/')
          button.btn.btn-primary(type="button") Cancel
