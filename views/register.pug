extends layout

block content
  .container
    h1 Formulaire d'inscription
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Identifiant')
      .form-group
        input.form-control(type='password', name="password", placeholder='Mot e passe')
      button.btn.btn-default(type='submit') S'inscrire
      a(href='/')
        button.btn.btn-primary(type="button") Annuler
