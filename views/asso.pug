extends layout

block content
  .container
    h2#msg_h2 #{asso.username} - organisation administration page
    p.lead Here you can do a lot of awesome thing !
    form.center-block(role='form', action="/add_event",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="title", placeholder='Title')
      .form-group
        input.form-control(type='password', name="password", placeholder='What do you plan ?')
      .form-group
        input.form-control(type='text', name="name", placeholder='Name')
      .form-group
        input.form-control(type='text', name="address", placeholder='Address')
      .form-group
        input.form-control(type='text', name="purpose", placeholder='Purpose')
      .form-group
        input.form-control(type='email', name="email", placeholder='Email')
      .form-group
        input.form-control(type='url', name="website", placeholder='Website')
      button.btn.btn-default(type='submit') Subscribe
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
